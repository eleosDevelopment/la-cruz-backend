{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for Projecto U Distribuidora La Cruz",
  "license": "ISC",
  "author": "Eleos Development",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node --watch dist/index.js",
    "dev": "npm run build && node --watch dist/index.js",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write \"**/*.{js,ts,jsx,tsx,json,css,html,md,yml}\"",
    "check-format": "prettier --check \"**/*.{js,ts,jsx,tsx,json,css,html,md,yml}\"",
    "build:watch": "npx tsc -w",
    "start:dev": "npm run build:watch & npm run start"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mongoose": "^8.17.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  }
}